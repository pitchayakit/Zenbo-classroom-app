<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/cancelAlarmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="184dp"
        android:text="Cancel alarm"
        app:layout_constraintStart_toEndOf="@+id/presentation_time_text"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/presentation_time_text"
        android:layout_width="204dp"
        android:layout_height="43dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="184dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/presentation_time_bt"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/presentation_time_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="364dp"
        android:layout_marginTop="184dp"
        android:text="Set alarm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>