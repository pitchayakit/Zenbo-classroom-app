<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ncu.ZenboFaceRecognition.GroupsActivity">

    <Button
        android:id="@+id/btGroup1"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="132dp"
        android:text="@string/group_1"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/capturePhoto"
        android:layout_width="762dp"
        android:layout_height="589dp"
        android:layout_marginStart="448dp"
        android:layout_marginTop="132dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btGroup3"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="10dp"
        android:text="@string/group_3"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btGroup2" />

    <Button
        android:id="@+id/btGroup4"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="10dp"
        android:text="@string/group_4"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btGroup3" />

    <Button
        android:id="@+id/btGroup5"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="10dp"
        android:text="@string/group_5"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btGroup4" />

    <Button
        android:id="@+id/btBack"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="10dp"
        android:text="@string/btBack"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btGroup5" />

    <Button
        android:id="@+id/btGroup2"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="10dp"
        android:text="@string/group_2"
        android:textSize="36sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btGroup1" />

    <TextView
        android:id="@+id/groupsActivityHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="@string/groups_activity_header"
        android:textSize="62sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
