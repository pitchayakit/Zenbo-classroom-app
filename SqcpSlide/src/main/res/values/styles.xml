<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RobotDevToolTheme" parent="Theme.AppCompat">
        <item name="android:textViewStyle">@android:style/TextAppearance.Large</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Large</item>
        <item name="android:textAppearanceButton">@android:style/TextAppearance.Large</item>
        <item name="android:actionMenuTextAppearance">@android:style/TextAppearance.Large</item>
    </style>

    <style name="RobotDevToolTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RobotDevToolTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="RobotDevToolTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
